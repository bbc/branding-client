{
    "name": "bbc/branding-client",
    "description": "PHP Branding client",
    "license": "Apache-2.0",
    "type": "library",
    "autoload": {
        "psr-4": { "BBC\\BrandingClient\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\BBC\\BrandingClient\\": "tests/" }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:bbc/programmes-caching-library.git"
        }
    ],
    "require": {
        "bbc/programmes-caching-library":  "^1.1.5",
        "php": ">=7.1.0",
        "guzzlehttp/guzzle": "^6.0",
        "mustache/mustache": "~2.5",
        "psr/cache": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.8.0",
        "phpunit/phpunit": "^8.4.3",
        "squizlabs/php_codesniffer": "^3.5.2",
        "symfony/cache": "^3.2"
    },
    "config": {
        "sort-packages": true
    }
}
